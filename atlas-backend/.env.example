# ATLAS Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost/atlas_db

# =============================================================================
# INCIDENT IQ (IIQ) API
# Get these from: IIQ Admin > Developer Tools
# =============================================================================
IIQ_URL=https://yourdistrict.incidentiq.com
IIQ_TOKEN=your-iiq-api-token
IIQ_SITE_ID=your-site-id
IIQ_PRODUCT_ID=your-product-id

# =============================================================================
# GOOGLE WORKSPACE API
# Service account JSON file for Admin SDK access
# =============================================================================
GOOGLE_CREDS_PATH=/opt/atlas/atlas-backend/google_credentials.json
GOOGLE_ADMIN_EMAIL=admin@yourdomain.org

# =============================================================================
# CISCO MERAKI API
# Get from: Meraki Dashboard > Organization > API Access
# =============================================================================
MERAKI_API_KEY=your-meraki-api-key
MERAKI_ORG_ID=your-org-id

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=generate-a-secure-random-key

# Domain restriction for Google OAuth
ALLOWED_DOMAIN=yourdomain.org

# Google Group that grants access to ATLAS
REQUIRED_GROUP=atlas-users@yourdomain.org

# =============================================================================
# GOOGLE OAUTH
# Get from: Google Cloud Console > APIs & Services > Credentials
# =============================================================================
GOOGLE_OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-client-secret
